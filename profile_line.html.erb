<% if profile and (@profile != @active_organization or active_organization) %>

  <div id="profile-line-wrap-1" class="<%= active_organization ? 'active-organization' : 'profile-header' %>">
    <div id="profile-line-wrap-2">

      <div id="profile-line">
        <%= profile_image profile, :portrait, :class => 'profile-image' %>
        <span class="profile-name"><%= profile.name %></span>

        <% if active_organization %>
          <span id="organization-menu">
            <%= link_to _('profile'), profile.url, :class => 'organization-button' %>
            <%= link_to _('members'), {:controller => :profile, :action => :members, :profile => profile.identifier}, :class => 'organization-button' %>
            <%= link_to _('exchanges'), {:controller => :exchange_plugin_myprofile, :action => :index, :profile => profile.identifier}, :class => 'organization-button'  %>
            <%= link_to _('network'), '', :class => 'organization-button' %>
            <%= link_to _('products'), {:controller => :catalog, :profile => profile.identifier}, :class => 'organization-button' %>
            <%= link_to _('knowledges'), {:controller => :profile, :action => :knowledges}, :class => 'organization-button' %>
            <%= link_to _('interests'), {:controller => :profile, :action => :interests}, :class => 'organization-button' %>
            <%= link_to _('currencies'), {:controller => :currency_plugin_myprofile, :action => :index, :profile => profile.identifier}, :class => 'organization-button' %>
            <%= link_to _('sniffer'), {:controller => :sniffer_plugin_myprofile, :action => :search, :profile => profile.identifier}, :class => 'organization-button' %>
          </span>
        <% end %>

        <div class="clean"></div>
      </div>
    </div>
  </div>

<% end %>
